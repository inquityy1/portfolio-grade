{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/lib/Button.tsx",
    "src/lib/themes/Theme.tsx",
    "src/lib/buttons/Button.tsx",
    "src/lib/labels/Label.tsx",
    "src/lib/inputs/Input.tsx",
    "src/lib/textarea/Textarea.tsx",
    "src/lib/selects/Select.tsx",
    "src/lib/checkboxes/Checkbox.tsx",
    "src/lib/fields/Field.tsx"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
}
